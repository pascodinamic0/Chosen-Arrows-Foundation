# Supabase Configuration
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git!

# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://[your-project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[your-anon-key]

# Service Role Key - NEVER expose this to the client!
# Get from: https://app.supabase.com/project/_/settings/api
# Only use in Server Actions and API routes
SUPABASE_SERVICE_ROLE_KEY=[your-service-role-key]

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Stripe Configuration (REQUIRED for payment processing)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
# Get from: https://dashboard.stripe.com/webhooks (after creating endpoint)
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Optional: Analytics, etc.
# NEXT_PUBLIC_GA_ID=[google-analytics-id]
